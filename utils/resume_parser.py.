import pdfplumber
import re

def extract_text_from_pdf(file):
    try:
        text = ""
        with pdfplumber.open(file) as pdf:
            for page in pdf.pages:
                text += page.extract_text() + "\n"
        return text
    except: return ""

def extract_skills_from_text(text, known_skills=None):
    if known_skills is None:
        known_skills = ["Python", "Java", "C++", "JavaScript", "React", "Node.js", "SQL", "Machine Learning", "AI", "AWS", "Docker", "Git", "HTML", "CSS"]
    found_skills = []
    text_lower = text.lower()
    for skill in known_skills:
        if skill.lower() in text_lower: found_skills.append(skill)
    return list(set(found_skills))
